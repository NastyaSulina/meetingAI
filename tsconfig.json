{
    "typeRoots": ["./node_modules/@types"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@*": ["src*"]
        },
        "outDir": "./dist/",
        "noImplicitAny": true,
        "target": "es5",
        "module": "esnext",
        "types": ["node", "webpack-env"],
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "esModuleInterop": true
    },
    "exclude": ["./node_modules", "./dist", "./testplane-report", "./e2e"]
}
